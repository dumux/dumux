[TimeLoop]
DtInitial = 1 # [s]
TEnd = 3000 # [s]
MaxTimeStepSize = 1

[Grid]
LowerLeft = 0 0
UpperRight = 2 2
Cells = 100 100

[Drop]
InitialContactAngle = 90
InitialVolume = 1e-1

[SpatialParams]
LensLowerLeft = 1.0 2.0 # [m] coordinates of the lower left lens corner
LensUpperRight = 4.0 3.0 # [m] coordinates of the upper right lens corner

[SpatialParams.Lens]
Swr = 0.18
VanGenuchtenAlpha = 0.00045
VanGenuchtenN = 7.3

[SpatialParams.Outer]
Swr = 0.05
VanGenuchtenAlpha = 0.0037
VanGenuchtenN = 4.7

[Problem]
Name = 2p
EnableGravity = true

[Vtk]
WriteFaceData = false
AddVelocity = true

[Newton]
EnablePartialReassembly = true
