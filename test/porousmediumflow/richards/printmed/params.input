[TimeLoop]
DtInitial = 10 # [s]
TEnd = 20000 # [s]

[Grid]
LowerLeft = 0 0
UpperRight = 5e-3 5e-3
Cells = 50 50

[Drop]
InitialContactAngle = 90
InitialVolume = 1e-1
InitialContactRadius = 1e-3
InitialCenter = 2.5e-3 5e-3

[Problem]
Name = richardslens
EnableGravity = true # enable gravity

[Newton]
TargetSteps = 18 # set the "desirable" number of Newton iterations of a time step
EnableChop = true # chop for better convergence

[LinearSolver]
Type = bicgstabsolver

[LinearSolver.Preconditioner]
Type = amg
AmgMaxLevel = 2
AmgAccumulationMode = atOnce

[SpatialParams.Lens]
Swr = 0.05
Snr = 0.0
VanGenuchtenAlpha = 0.0037
VanGenuchtenN = 4.7

[SpatialParams.OuterDomain]
Swr = 0.05
Snr = 0.0
VanGenuchtenAlpha = 1e-6
VanGenuchtenN = 4.7
Permeability = 1e-18

[Vtk]
WriteFaceData = false
AddVelocity = true
