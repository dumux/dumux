[TimeLoop]
DtInitial = 1e-2 # [s]
# MaxTimeStepSize = 1e1
TEnd = 5e2 # [s]

[Grid]
UpperRight = 1 1
Cells = 40 40

[Problem]
Name = test_densitydrivenflow # name passed to the output routines
EnableGravity = true
EnableInertiaTerms = false
UseWholeLength = false

[Assembly]
NumericDifference.BaseEpsilon = 1e-8

[Newton]
MaxSteps = 10
MaxRelativeShift = 1e-8

[Vtk]
WriteFaceData = false


[LinearSolver]
ResidualReduction = 1e-2
Verbosity = 0

[LinearSolver.Preconditioner]
Verbosity = 0
Iterations = 2
SimpleSolverVerbosity = 0
SimpleSolverType = cgsolver
SimpleSolverResidualReduction = 0.1
InvertSchurComplementA = false
RelaxationP = 0.7
RelaxationU = 0.3
UseDiagonalInSchurComplement = true
UseDiagonalInUpdate = true
DirectSolverForA = false
DirichletHack = true
DirectVelocitySolver = false
