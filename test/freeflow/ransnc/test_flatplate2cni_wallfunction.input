[TimeLoop]
DtInitial = 1e-2 # [s]
TEnd = 1000 # [s]

[Grid]
Verbosity = true
Positions0 = 0.0 6.0
Positions1 = 0.0 0.5
Cells0 = 10
Cells1 = 5

[Problem]
Name = test_flatplate2cni_wallfunction # name passed to the output routines
InletVelocity = 0.1 # [m/s]
EnableGravity = false

[RANS]
TurbulentSchmidtNumber = 0.7
TurbulentPrandtlNumber = 0.85

[KEpsilon]
YPlusThreshold = 10. # should be small (10-30) for coarse grids

[Assembly]
NumericDifferenceMethod = 0

[Newton]
MaxSteps = 10
TargetSteps = 8
MaxRelativeShift = 1e-5

[Vtk]
AddVelocity = true
